<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.prognoobie.nikhil.programc.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/clogo"
        android:layout_centerHorizontal="true"
        android:id="@+id/main_logo"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/coding"
        android:layout_below="@+id/main_logo"
        android:id="@+id/main_coding"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_coding"
        android:text="Programs"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/quesans"
        android:layout_below="@+id/main_logo"
        android:layout_marginLeft="250dp"
        android:id="@+id/main_quesans"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_quesans"
        android:text="Frequent Questions"
        android:layout_marginLeft="232dp"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/main_coding"
        android:src="@drawable/aboutus"
        android:id="@+id/main_aboutus"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_aboutus"
        android:text="About us"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
